[
  {
    type:     "button"
    icon:     "octoface"
    callback: "github:toggle-git-tab"
    tooltip:  "GitHub: Toggle Git Tab"
  }
  {
    type:     "button"
    iconset:  "fa"
    icon:     "magic"
    callback: "atom-beautify:beautify-editor"
    tooltip:  "Atom Beautify: Beautify Editor ⌃⌥X"
  }
  {
    type:     "button"
    icon:     "markdown"
    callback: "markdown-preview:toggle"
    tooltip:  "Markdown: Toggle ⌃⇧M"
