      color: "#FA4F28"
  }
  {
    type:     "button"
    icon:     "code"
    callback: "ruby-test:test-single"
    tooltip:  "Ruby Test: Test Single ⌃⌘R"
    style:
      color: "#FA4F28"
  }
  {
    type:     "button"
    icon:     "sync"
    callback: "ruby-test:test-previous"
    tooltip:  "Ruby Test: Test Previous ⌃⌘E"
    style:
      color: "#FA4F28"
  }
  { type: "spacer" }
  {
    type:    "url"
    icon:    "file"
    url:     "https://foundation.zurb.com/sites/docs"
    tooltip: "Foundation Documentation"
    style:
      color: "#1779BA"
  }
  {
    type:    "url"
    icon:    "file-code"
